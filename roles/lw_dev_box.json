{
   "name": "lw-dev-box",
   "description": "A role to configure our lightweight dev boxes",
   
   "json_class": "Chef::Role",
   
   "override_attributes": 
   {
      "npm":
      {
         "version":"v0.12.0",
	 "packages":
	 [
            "yo",
            "grunt-cli",
            "bower",
            "mocha",
            "jshint",
            "jslint",
            "phantomjs-prebuilt",
            "jasmine-node"                    
         ]
      },
      "ide":
      {
         "intellij":
	 {
	    "version": "2016.2.1"
	 }
      }
   },
   
   "run_list": [
      "recipe[npm::default]",
      "recipe[ide::intellij]"
   ]
}